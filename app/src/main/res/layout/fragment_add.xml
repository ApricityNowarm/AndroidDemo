<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addData"
            type="com.example.demo.MyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rainbow"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_money"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#f8d02d"
                android:gravity="center|right"
                android:singleLine="true"
                android:text="@{'ï¿¥' + String.valueOf(addData.getMoney())}"
                android:textColor="#000000"
                android:textSize="50sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5">

                <CheckBox
                    android:id="@+id/yinshi_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/canpan_check"
                    android:gravity="center"
                    android:text="@string/yinshi" />

                <CheckBox
                    android:id="@+id/gouwu_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/gouwu_ck"
                    android:gravity="center"
                    android:text="@string/gouwu" />

                <CheckBox
                    android:id="@+id/jiaotong_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/jiaotong_ck"
                    android:gravity="center"
                    android:text="@string/jiaotong" />

                <CheckBox
                    android:id="@+id/lingshi_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/lingshi_ck"
                    android:gravity="center"
                    android:text="@string/lingshi" />

                <CheckBox
                    android:id="@+id/yule_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/yule_ck"
                    android:gravity="center"
                    android:text="@string/yule" />

                <CheckBox
                    android:id="@+id/shui_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/shui_ck"
                    android:gravity="center"
                    android:text="@string/shui" />

                <CheckBox
                    android:id="@+id/dian_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/dian_ck"
                    android:gravity="center"
                    android:text="@string/dian" />

                <CheckBox
                    android:id="@+id/wangluo_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/wangluo_ck"
                    android:gravity="center"
                    android:text="@string/wangluo" />

                <CheckBox
                    android:id="@+id/zhufang_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/zhufang_ck"
                    android:gravity="center"
                    android:text="@string/zhufang" />

                <CheckBox
                    android:id="@+id/jiaoyu_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/jiaoyu_ck"
                    android:gravity="center"
                    android:text="@string/jiaoyu" />

                <CheckBox
                    android:id="@+id/yuer_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/yuer_ck"
                    android:gravity="center"
                    android:text="@string/yuer" />

                <CheckBox
                    android:id="@+id/lvxing_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/lvxing_ck"
                    android:gravity="center"
                    android:text="@string/lvxing" />

                <CheckBox
                    android:id="@+id/hufu_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/hufu_ck"
                    android:gravity="center"
                    android:text="@string/hufu" />

                <CheckBox
                    android:id="@+id/riyong_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/riyong_ck"
                    android:gravity="center"
                    android:text="@string/riyong" />

                <CheckBox
                    android:id="@+id/xiuche_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/xiuche_ck"
                    android:gravity="center"
                    android:text="@string/xiuche" />

                <CheckBox
                    android:id="@+id/chongwu_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/chongwu_ck"
                    android:gravity="center"
                    android:text="@string/chongwu" />

                <CheckBox
                    android:id="@+id/gongzi_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/gongzi_ck"
                    android:gravity="center"
                    android:text="@string/gongzi" />

                <CheckBox
                    android:id="@+id/shejiao_ck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/shejiao_ck"
                    android:gravity="center"
                    android:text="@string/shejiao" />
            </GridLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:columnCount="3"
                android:rowCount="4"
                tools:ignore="NestedWeights">

                <Button
                    android:id="@+id/one"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/two"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_2"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/three"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_3"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/four"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_4"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/five"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_5"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/six"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_6"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/seven"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_7"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/eight"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_8"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/nine"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_9"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/sub"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/sub"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/zero"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/_0"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/point"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/bt_number"
                    android:text="@string/point"
                    android:textSize="30sp"
                    android:textStyle="italic" />

            </GridLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_number"
                    android:text="@string/delete"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_number"
                    android:text="@string/add"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/certain"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/certain"
                    android:text="@string/certain"
                    android:textSize="30sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>